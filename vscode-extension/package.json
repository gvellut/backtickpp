{
    "name": "backtick-plus-plus",
    "displayName": "Backtick++",
    "description": "Quick window switching for VS Code on macOS",
    "version": "1.0.0",
    "publisher": "backtickpp",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.89.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "window",
        "switcher",
        "macos",
        "navigation"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "backtick-plus-plus.switchForward",
                "title": "Switch Forward",
                "category": "Backtick++"
            },
            {
                "command": "backtick-plus-plus.switchBackward",
                "title": "Switch Backward",
                "category": "Backtick++"
            },
            {
                "command": "backtick-plus-plus.instantSwitch",
                "title": "Instant Switch",
                "category": "Backtick++"
            }
        ],
        "keybindings": [
            {
                "command": "backtick-plus-plus.switchForward",
                "mac": "cmd+alt+shift+f"
            },
            {
                "command": "backtick-plus-plus.switchBackward",
                "mac": "cmd+alt+shift+g"
            },
            {
                "command": "backtick-plus-plus.instantSwitch",
                "mac": "cmd+alt+shift+d"
            }
        ],
        "configuration": {
            "title": "Backtick++",
            "properties": {
                "backtick-plus-plus.activationMode": {
                    "type": "string",
                    "enum": [
                        "automatic",
                        "manual"
                    ],
                    "default": "automatic",
                    "description": "How window activation is handled. 'automatic' moves the current window to top, 'manual' preserves the current order."
                },
                "backtick-plus-plus.newWindowPosition": {
                    "type": "string",
                    "enum": [
                        "top",
                        "bottom"
                    ],
                    "default": "top",
                    "description": "Where new windows appear in the switcher list."
                },
                "backtick-plus-plus.helperAppPath": {
                    "type": "string",
                    "default": "",
                    "description": "Optional: Full path to the executable of the Backtick++ Helper. If set, the extension will use this path to launch the helper process."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test",
        "test:cli": "npm run compile && node ./out/test-cli.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.89.0",
        "typescript": "^5.0.0",
        "@types/node": "^20.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/backtick-plus-plus.git"
    }
}